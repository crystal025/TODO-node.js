<!doctype html>
<html lang="ko">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, Todo!</title>
  </head>
  <body>
    <%- include("navbar.html") %>
      <div class="container mt-4">
      <ul class="list-group">
      <% todoList.map((todo)=>{  %>
          <li class="list-group-item" data-id="<%= todo._id %>">
            <h5><%= todo.content %></h5>
            <p><%= todo.date %></p>
            <button type="button" class="btn btn-outline-danger" data-id="<%= todo._id %>">ğŸ—‘</button>
            <button type="button" class="btn btn-outline-warning" data-id="<%= todo._id %>">âœï¸</button>
           </li>
           <% }) %>
          </ul>
        </div>
          <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
          <script>
            $(".list-group-item").click((event)=>{
              window.location.pathname = `/detail/${event.target.dataset.id}`
            })
            $(".btn-outline-danger").click((event)=>{
              event.stopPropagation()
              $.ajax({
              method:"DELETE",
              url: "/list",
              data: {_id:event.target.dataset.id}
            }).done((result)=>{
              console.log(event.target.parent)
              $(event.target).parent('li').fadeOut();
            }).fail(()=>{
            })
            })
            $(".btn-outline-warning").click((event)=>{
              event.stopPropagation()
              if(event.target === event.currentTarget){
                window.location.pathname = `/edit/${event.target.dataset.id}`
              }
            })


          </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>